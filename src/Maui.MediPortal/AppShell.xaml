<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.MediPortal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.MediPortal"
    xmlns:view="clr-namespace:Maui.MediPortal.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Maui.MediPortal">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Patients"
        ContentTemplate="{DataTemplate view:PatientsView}"
        Route="PatientsView" />
    <ShellContent
        Title="Add Patients"
        ContentTemplate="{DataTemplate view:AddPatientsView}"
        Route="AddPatientsView" />
    <ShellContent
        Title="Physicians"
        ContentTemplate="{DataTemplate view:PhysiciansView}"
        Route="PhysiciansView" />
    <ShellContent
        Title="Appointments"
        ContentTemplate="{DataTemplate view:AppointmentsView}"
        Route="AppointmentsView" />


</Shell>
