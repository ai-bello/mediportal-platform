<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MediPortal.Views.AddPhysiciansView"
             Title="AddPhysiciansView"
             NavigatedTo="AddPhysiciansView_NavigatedTo">
    <VerticalStackLayout>
        <Label Text="Name"/>
        <Entry Text="{Binding Name}"/>
        <Label Text="License Number"/>
        <Entry Text="{Binding LicenseNumber}"/>
        <Label Text="Graduation Date (Click to edit)"/>
        <DatePicker 
            Date="{Binding GraduationDate}"
            MinimumDate="1900-01-01"
            MaximumDate="2025-12-31"/>
        <Label Text="Specializations"/>
        <Entry Text="{Binding Specializations}"/>
        <Button Text="Save" Clicked="SaveClicked" />
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>