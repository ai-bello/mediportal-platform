<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MediPortal.Views.AddPatientsView"
             Title="AddPatientsView"
             NavigatedTo="AddPatientsView_NavigatedTo">
    <VerticalStackLayout>
        <Label Text="Name"/>
        <Entry Text="{Binding Name}"/>
        <Label Text="Address"/>
        <Entry Text="{Binding Address}"/>
        <Label Text="Birthdate (Click to edit)"/>
        <DatePicker 
            Date="{Binding BirthDate}"
            MinimumDate="1900-01-01"
            MaximumDate="2025-12-31"/>
        <Label Text="Race"/>
        <Entry Text="{Binding Race}"/>
        <Label Text="Gender"/>
        <Entry Text="{Binding Gender}"/>
        <Button Text="Save" Clicked="SaveClicked" />
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>