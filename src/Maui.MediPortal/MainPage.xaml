<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MediPortal.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Patients"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button Text="Manage Patients" Clicked="ManagePatientsClicked"/>
            <Button Text="Manage Physicians" Clicked="ManagePhysiciansClicked"/>
            <Button Text="Manage Appointments" Clicked="ManageAppointmentsClicked"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
